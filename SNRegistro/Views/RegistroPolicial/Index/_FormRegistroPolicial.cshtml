
<form class="form-horizontal" role="form" ng-controller="GestorPolicialCtrl as vm" name="GestorPolicialForm" style="margin:5px;" novalidate>
    <div class="form-group">
        <label for="Ciudadano" class="col-md-4 control-label">Ciudadano</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" name="Ciudadano" ng-required="true" ng-model="vm.GestorPolicial.Ciudadano" typeahead="Ciudadano as Ciudadano.Nombre + ' ' + Ciudadano.Apellido for Ciudadano in vm.Ciudadanos | filter:$viewValue | limitTo:8" class="form-control">
                <span class="input-group-btn">
                    <button class="btn btn-default" ng-click="vm.crearCiudadano()" type="button">Crear</button>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="policia" class="col-md-4 control-label">Policia</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" name="policia" ng-required="true" ng-model="vm.GestorPolicial.Policia" typeahead="Policia as Policia.Nombre + ' ' + Policia.Apellido for Policia in vm.Policias | filter:$viewValue | limitTo:8" class="form-control">
                <span class="input-group-btn">
                    <button class="btn btn-default" ng-click="vm.crearDoctor()" type="button">Crear</button>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="comisaria" class="col-md-4 control-label">Comisaria</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" name="comisaria" ng-required="true" ng-model="vm.GestorPolicial.Comisaria" typeahead="Comisaria as Comisaria.Nombre + ' ' + Comisaria.CiudadID for Comisaria in vm.Comisarias | filter:$viewValue | limitTo:8" class="form-control">
                <span class="input-group-btn">
                    <button class="btn btn-default" ng-click="vm.crearDoctor()" type="button">Crear</button>
                </span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="ProcesosPoliciale" class="col-md-4 control-label">Proceso</label>
        <div class="col-md-8">
            <select name="ProcesosPoliciale" required
                    ng-model="vm.GestorPolicial.ProcesosPoliciale"
                    ng-options="r.NombrePP for r in vm.ProcesosPoliciales" class="form-control"
                    ng-required="true">
                <!--<option value="">-- Seleccione el concepto --</option>-->
                <option value="" ng-hide="vm.GestorPolicial.ProcesosPoliciale">Seleccione Proceso</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="AccionesPoliciale" class="col-md-4 control-label">Acción</label>
        <div class="col-md-8">
            <select name="AccionesPoliciale" required
                    ng-model="vm.GestorPolicial.AccionesPoliciale"
                    ng-options="r.NombreAP for r in vm.AccionesPoliciales" class="form-control"
                    ng-required="true">

                <option value="" ng-hide="vm.GestorPolicial.AccionesPoliciale">Seleccione Acción</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="Comentario" class="col-md-4 control-label">Comentario</label>
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" name="Comentario" ng-required="true" ng-model="vm.GestorPolicial.Comentario" class="form-control">
            </div>
        </div>
    </div>


    <button ng-click="vm.guardar()" ng-disabled="GestorPolicialForm.$invalid" class="btn btn-default">
        <span ng-show="vm.GestorPolicial.RegistroPolicialID == null">Cargar</span>
        <span ng-show="vm.GestorPolicial.RegistroPolicialID != null">
Editar 
        </span>

    </button>
    @*Editar Nro: {{vm.registroM.movimientoID}}*@
    <button ng-click="vm.nuevoParaCargar()" class="btn btn-default">
        Nuevo
    </button>
    <div class="panel panel-default" style="margin-top:20px;">
        <div class="panel-heading">Aviso</div>
        <div class="panel-body">
            {{vm.MensajeDelProceso}}
        </div>
    </div>
    <pre>
        {{vm.GestorPolicial | json}}
        </pre>
    @*<pre>
    {{vm | json }}
</pre>*@
</form>



